<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/ThemeOverlay.BeatMaker.FullscreenContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".FullscreenActivity">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.beatmaker.beatmaker.MainFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" />

    <fragment android:name="com.beatmaker.beatmaker.SidePanelFragment"
        android:id="@+id/sidePanelFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
    />

</RelativeLayout>
